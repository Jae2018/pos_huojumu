<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/d_80"
    android:orientation="vertical"
    android:padding="@dimen/d_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_home_selected_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLength="8"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_home_selected_number"
            android:layout_width="@dimen/d_64"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d_8"
            android:gravity="end"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_home_selected_scale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tv_home_selected_taste"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLength="15"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tv_home_selected_addon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLength="15"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tv_home_selected_addon_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLength="15"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tv_home_selected_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLength="15"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tv_home_selected_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="小计："
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_home_selected_cost"
            android:layout_width="@dimen/d_50"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_light" />
    </LinearLayout>

</LinearLayout>