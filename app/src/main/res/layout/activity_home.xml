<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.activity.home.HomeActivity">

    <WebView
        android:id="@+id/web_order"
        android:layout_width="@dimen/d_540"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_60"
        android:gravity="center_vertical"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/d_160"
            android:layout_height="@dimen/d_60"
            android:contentDescription="@string/des"
            android:src="@drawable/top1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_60">

            <ImageView
                android:layout_width="@dimen/d_860"
                android:layout_height="@dimen/d_60"
                android:contentDescription="@string/des"
                android:scaleType="centerInside"
                android:src="@drawable/top2" />

            <RelativeLayout
                android:id="@+id/linear2"
                android:layout_width="@dimen/d_250"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/d_120"
                android:paddingTop="@dimen/d_6">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日期："
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/worker_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/tv1"
                    android:gravity="end"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv1"
                    android:layout_marginTop="@dimen/d_8"
                    android:text="当前收入："
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/order_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv1"
                    android:layout_marginTop="@dimen/d_8"
                    android:layout_toEndOf="@+id/tv2"
                    android:gravity="end"
                    android:textColor="@android:color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/d_180"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/d_80"
                android:layout_toEndOf="@id/linear2"
                android:paddingTop="@dimen/d_6">

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前在班人员："
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/worker_name1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/d_36"
                    android:layout_toEndOf="@+id/tv3"
                    android:gravity="end"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv3"
                    android:layout_marginTop="@dimen/d_8"
                    android:text="当前出单："
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/order_num1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv3"
                    android:layout_marginTop="@dimen/d_8"
                    android:layout_toEndOf="@+id/tv4"
                    android:gravity="end"
                    android:textColor="@android:color/white" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/btn_home_more_function"
                android:layout_width="@dimen/d_84"
                android:layout_height="@dimen/d_36"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/d_16"
                android:layout_toStartOf="@+id/btn_home_shutdown"
                android:background="@drawable/home_btn_shape"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/d_20"
                    android:layout_height="@dimen/d_20"
                    android:layout_marginEnd="@dimen/d_10"
                    android:contentDescription="@string/des"
                    android:src="@drawable/icon_function" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/function"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_home_shutdown"
                android:layout_width="@dimen/d_84"
                android:layout_height="@dimen/d_36"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/d_16"
                android:background="@drawable/home_btn_shape"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/d_20"
                    android:layout_height="@dimen/d_20"
                    android:layout_marginEnd="@dimen/d_10"
                    android:contentDescription="@string/des"
                    android:src="@drawable/icon_shutdown" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/shutdown"
                    android:textColor="@color/red_delete" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_10"
        android:layout_below="@+id/linearLayout"
        android:background="@android:color/white" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="@dimen/d_250"
        android:layout_height="@dimen/d_40"
        android:layout_below="@+id/line"
        android:gravity="center"
        android:text="小票"
        android:textColor="@android:color/white" />

    <View
        android:id="@+id/view2"
        android:layout_width="@dimen/d_250"
        android:layout_height="@dimen/d_8"
        android:layout_below="@+id/text1"
        android:background="@android:color/white" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="@dimen/d_250"
        android:layout_height="match_parent"
        android:layout_above="@+id/relativeLayout"
        android:layout_below="@+id/view2"
        android:background="@color/home_left"
        android:overScrollMode="never" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="@dimen/d_250"
        android:layout_height="@dimen/d_50"
        android:layout_alignParentBottom="true"
        android:background="@color/home_left_bottom"
        android:padding="@dimen/d_4">

        <TextView
            android:id="@+id/total_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d_4"
            android:gravity="center_vertical"
            android:text="@string/number"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/cut_number"
            android:layout_width="@dimen/d_120"
            android:layout_height="wrap_content"
            android:layout_below="@id/total_number"
            android:gravity="center_vertical"
            android:text="@string/cut"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/total_number"
            android:layout_toEndOf="@id/cut_number"
            android:gravity="center_vertical"
            android:text="@string/price"
            android:textColor="@android:color/white" />

    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="@dimen/dp_10"
        android:layout_height="match_parent"
        android:layout_below="@id/linearLayout"
        android:layout_toEndOf="@id/recyclerView"
        android:background="@android:color/white" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="@dimen/d_120"
        android:layout_height="match_parent"
        android:layout_below="@+id/line"
        android:layout_toEndOf="@+id/view1"
        android:background="@color/default_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d_10"
            android:gravity="center"
            android:text="分类" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="-------------------" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/line"
        android:layout_toEndOf="@+id/linear1"
        android:background="@color/default_bg">

        <LinearLayout
            android:id="@+id/button1"
            android:layout_width="@dimen/d_84"
            android:layout_height="@dimen/d_40"
            android:background="@drawable/home_btn_tow"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/d_24"
                android:layout_height="@dimen/d_24"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/d_8"
                android:contentDescription="@string/des"
                android:src="@drawable/icon_g" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/d_8"
                android:text="挂单"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/iv_has_gua_dan"
                android:layout_width="@dimen/d_10"
                android:layout_height="@dimen/d_10"
                android:layout_marginTop="@dimen/d_4"
                android:contentDescription="@string/des"
                android:src="@drawable/shape_circle_red"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d_40"
            android:layout_marginStart="@dimen/d_16"
            android:layout_toEndOf="@id/button1"
            android:background="@drawable/home_btn_tow"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/d_24"
                android:layout_height="@dimen/d_24"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/d_8"
                android:contentDescription="@string/des"
                android:src="@drawable/icon_delete" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/d_8"
                android:layout_marginEnd="@dimen/d_8"
                android:text="删除全部"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d_40"
            android:layout_marginStart="@dimen/d_16"
            android:layout_toEndOf="@id/button2"
            android:background="@drawable/home_btn_tow"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/d_24"
                android:layout_height="@dimen/d_24"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/d_8"
                android:contentDescription="@string/des"
                android:src="@drawable/icon_recommened" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/d_8"
                android:layout_marginEnd="@dimen/d_8"
                android:text="推荐"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d_40"
            android:layout_marginStart="@dimen/d_16"
            android:layout_toEndOf="@id/button4"
            android:background="@drawable/home_btn_tow"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/d_24"
                android:layout_height="@dimen/d_24"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/d_8"
                android:contentDescription="@string/des"
                android:src="@drawable/refresh" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/d_8"
                android:layout_marginEnd="@dimen/d_8"
                android:text="刷新"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/btn_up"
            android:layout_width="@dimen/d_80"
            android:layout_height="@dimen/d_30"
            android:layout_marginTop="@dimen/d_6"
            android:layout_marginEnd="@dimen/d_16"
            android:layout_toStartOf="@+id/btn_next"
            android:background="@drawable/home_btn_page"
            android:gravity="center"
            android:text="@string/up_page"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/btn_next"
            android:layout_width="@dimen/d_80"
            android:layout_height="@dimen/d_30"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/d_6"
            android:layout_marginEnd="@dimen/d_40"
            android:background="@drawable/home_btn_page"
            android:gravity="center"
            android:text="@string/next_page"
            android:textColor="@android:color/white" />

        <!--<android.support.v4.widget.SwipeRefreshLayout-->
        <!--android:id="@+id/swipe"-->
        <!---->
        <!--android:layout_width="@dimen/d_700"-->
        <!--android:layout_height="@dimen/d_640">-->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView3"
            android:layout_width="@dimen/d_700"
            android:layout_height="@dimen/d_640"
            android:layout_marginTop="@dimen/d_48"
            android:overScrollMode="never" />

        <!--</android.support.v4.widget.SwipeRefreshLayout>-->


        <LinearLayout
            android:id="@+id/btn_search"
            android:layout_width="@dimen/d_240"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/d_16"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/pinyin"
                android:layout_width="@dimen/d_250"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_10"
                android:background="@drawable/input_border">

                <TextView
                    android:id="@+id/edit_search"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/d_36"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="center" />

                <View
                    android:layout_width="@dimen/d_1"
                    android:layout_height="@dimen/d_36"
                    android:background="@color/home_other_pay" />

                <ImageView
                    android:id="@+id/input_clear_btn"
                    android:layout_width="@dimen/d_36"
                    android:layout_height="@dimen/d_36"
                    android:contentDescription="@string/des"
                    android:src="@drawable/clear" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_50"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/recyclerView"
        android:background="@color/home_bottom"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_home_quick_pay"
            android:layout_width="@dimen/d_96"
            android:layout_height="@dimen/d_36"
            android:background="@drawable/quick"
            android:contentDescription="@string/des" />

        <ImageView
            android:id="@+id/btn_home_check"
            android:layout_width="@dimen/d_96"
            android:layout_height="@dimen/d_40"
            android:layout_marginStart="@dimen/d_32"
            android:background="@drawable/check"
            android:contentDescription="@string/des"
            android:enabled="false" />

        <ImageView
            android:id="@+id/btn_home_take_out"
            android:layout_width="@dimen/d_96"
            android:layout_height="@dimen/d_40"
            android:layout_marginStart="@dimen/d_32"
            android:background="@drawable/out"
            android:contentDescription="@string/des"
            android:enabled="false" />

    </LinearLayout>


</RelativeLayout>