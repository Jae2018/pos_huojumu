<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d_80"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/d_16"
    android:paddingRight="@dimen/d_16">

    <TextView
        android:id="@+id/tv_inventory_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_inventory_creator"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d_40"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/tv_inventory_finisher"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d_40"
            android:gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_inventory_start_time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d_40"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/tv_inventory_end_time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d_40"
            android:gravity="center_vertical" />
    </LinearLayout>

</LinearLayout>