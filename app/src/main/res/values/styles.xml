<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@drawable/divider_bg</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <!-- 将splash图片设置在这，这样这张图片取代白屏 -->
        <item name="android:windowBackground">@drawable/load_bg</item>
        <item name="android:windowFullscreen">true</item>
        <!-- 或者是将主题设置成透明，虽然点击图标会有点小小的卡顿，但是用户体验不影响 -->
        <!-- <item name="android:windowIsTranslucent">true</item> --> <!-- 透明背景不要了 -->
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="HomeButtonStyle">
        <item name="android:layout_width">@dimen/d_101</item>
        <item name="android:layout_height">@dimen/d_48</item>
        <item name="android:layout_marginTop">@dimen/d_8</item>
        <item name="android:layout_marginBottom">@dimen/d_8</item>
        <item name="android:layout_marginEnd">@dimen/d_16</item>
        <item name="android:textSize">@dimen/f_16</item>
        <item name="android:textColor">@color/btn_text</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/btn_den</item>
    </style>

    <!-- 自定义diaolog   windowBackground 放一张透明背景，去dialog黑边 -->
    <style name="customDialog" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:backgroundDimEnabled">true</item> <!--背景变暗（dialog半透明背景）-->
        <item name="android:windowCloseOnTouchOutside">false</item><!--点击空白位置不消失-->
    </style>

    <style name="CashPayBtn">
        <item name="android:layout_width">@dimen/d_84</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/f_18</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/cash_pay_btn_selector</item>
    </style>

    <style name="s_true" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#33da33</item>
    </style>

    <style name="s_false" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#9b9b9b</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
