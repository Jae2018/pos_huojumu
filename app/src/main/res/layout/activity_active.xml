        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/qr_img"
        android:layout_width="@dimen/d_200"
        android:layout_height="@dimen/d_200"
