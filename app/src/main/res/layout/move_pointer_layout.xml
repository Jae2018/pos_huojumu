<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:background="@color/black_overlay">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="@dimen/d_170"
        android:layout_height="@dimen/d_170"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relative_types"
            android:layout_width="@dimen/d_240"
            android:layout_height="@dimen/d_240">

            <TextView
                android:id="@+id/left_tv"
                android:layout_width="@dimen/d_72"
                android:layout_height="@dimen/d_72"
                android:layout_centerVertical="true"
                android:background="@drawable/move_check_selector"
                android:gravity="center"
                android:padding="@dimen/d_2" />

            <TextView
                android:id="@+id/right_tv"
                android:layout_width="@dimen/d_72"
                android:layout_height="@dimen/d_72"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/move_check_selector"
                android:gravity="center"
                android:padding="@dimen/d_2" />

            <TextView
                android:id="@+id/top_tv"
                android:layout_width="@dimen/d_72"
                android:layout_height="@dimen/d_72"
                android:layout_centerHorizontal="true"
                android:background="@drawable/move_check_selector"
                android:gravity="center"
                android:padding="@dimen/d_2" />

            <TextView
                android:id="@+id/bottom_tv"
                android:layout_width="@dimen/d_72"
                android:layout_height="@dimen/d_72"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/move_check_selector"
                android:gravity="center"
                android:padding="@dimen/d_2" />
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>