<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/d_48"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/d_160"
            android:layout_height="@dimen/d_160"
            android:layout_margin="@dimen/d_16"/>

        <!--<android.support.v4.widget.NestedScrollView-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="1">-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名称："/>

                <TextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/d_10"
                    android:layout_marginTop="@dimen/d_16"
                    android:layout_below="@+id/tv_product_name"
                    android:text="规格："
                    android:textSize="@dimen/f_16"
                    android:textStyle="bold" />

                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/id_flowlayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_product_name"
                    android:minHeight="@dimen/d_40"
                    android:layout_toEndOf="@+id/textView3"
                    android:layout_marginStart="@dimen/d_10"
                    android:layout_marginEnd="@dimen/d_10" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/d_10"
                    android:layout_below="@+id/id_flowlayout1"
                    android:layout_marginTop="@dimen/d_10"
                    android:gravity="center_vertical"
                    android:text="口味："
                    android:textSize="@dimen/f_16"
                    android:textStyle="bold" />

                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/id_flowlayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_flowlayout1"
                    android:layout_toEndOf="@+id/textView5"
                    android:layout_marginTop="@dimen/d_10"
                    android:layout_marginStart="@dimen/d_10"
                    android:layout_marginEnd="@dimen/d_10" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/d_10"
                    android:layout_marginTop="@dimen/d_10"
                    android:layout_below="@+id/id_flowlayout2"
                    android:gravity="center_vertical"
                    android:text="加料："
                    android:textSize="@dimen/f_16"
                    android:textStyle="bold" />

                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/id_flowlayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_flowlayout2"
                    android:layout_marginTop="@dimen/d_10"
                    android:layout_marginStart="@dimen/d_10"
                    android:layout_marginEnd="@dimen/d_10" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/d_10"
                    android:layout_marginTop="@dimen/d_10"
                    android:gravity="center_vertical"
                    android:text="做法："
                    android:textSize="@dimen/f_16"
                    android:textStyle="bold" />

                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/id_flowlayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/d_10"
                    android:layout_marginEnd="@dimen/d_10" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d_56"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:baselineAligned="false">


                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/d_10"
                            android:gravity="center_vertical"
                            android:text="备注："
                            android:textSize="@dimen/f_16"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/et_addon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/input_border"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:hint="@string/des"
                            android:inputType="textMultiLine"
                            android:maxLength="100"
                            android:padding="@dimen/d_4" />

                    <!--<LinearLayout-->
                        <!--android:layout_width="0dp"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:layout_weight="1"-->
                        <!--android:focusable="true"-->
                        <!--android:focusableInTouchMode="true"-->
                        <!--android:gravity="center">-->

                        <!--<TextView-->
                            <!--android:id="@+id/textView7"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="match_parent"-->
                            <!--android:layout_marginEnd="8dp"-->
                            <!--android:gravity="center_vertical"-->
                            <!--android:text="数量："-->
                            <!--android:textSize="@dimen/f_16"-->
                            <!--android:textStyle="bold" />-->

                        <!--<EditText-->
                            <!--android:id="@+id/tv_home_addon_number"-->
                            <!--android:layout_width="@dimen/d_80"-->
                            <!--android:layout_height="@dimen/d_48"-->
                            <!--android:background="@drawable/input_border"-->
                            <!--android:gravity="center"-->
                            <!--android:inputType="number"-->
                            <!--android:maxLength="3"-->
                            <!--android:padding="@dimen/d_8"-->
                            <!--android:text="1"-->
                            <!--android:textSize="@dimen/f_20"-->
                            <!--android:textStyle="bold" />-->
                    <!--</LinearLayout>-->

                </LinearLayout>
            </RelativeLayout>

        <!--</android.support.v4.widget.NestedScrollView>-->
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_50"
        android:layout_marginTop="@dimen/d_16">

        <Button
            android:id="@+id/btn_home_addon_cancel"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/d_48"
            android:layout_weight="1"
            android:background="@drawable/bg_dialog_ok_btn"
            android:text="取消"
            android:textColor="@android:color/white"
            android:textSize="@dimen/f_18" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_home_addon_ok"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/d_48"
            android:background="@drawable/bg_dialog_cancel_btn"
            android:layout_weight="1"
            android:text="确定"
            android:textColor="@android:color/white"
            android:textSize="@dimen/f_18" />
    </LinearLayout>
</LinearLayout>
