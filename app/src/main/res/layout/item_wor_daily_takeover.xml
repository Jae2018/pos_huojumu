<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d_80"
    android:background="@drawable/border_item"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/d_10">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_daily_list_item_no"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d_30"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/tv_daily_list_item_time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d_30"
            android:gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_daily_list_item_pay"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d_30"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/tv_daily_list_item_cut"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d_30"
            android:gravity="center_vertical" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_daily_list_item_money"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_weight="1" />
</LinearLayout>