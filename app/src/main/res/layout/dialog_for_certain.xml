<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/d_300"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_certain_dialog"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_48"
        android:textColor="@android:color/white"
        android:background="@drawable/shape_dialog_top_blue_corner_bg"
        android:gravity="center"
        android:textSize="@dimen/f_20" />

    <TextView
        android:id="@+id/tv_content_certain_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center"
        android:minHeight="@dimen/d_96" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_80"
        android:background="@android:color/white"
        android:gravity="center">

        <Button
            android:id="@+id/btn_cancel_certain_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dialog_cancel_btn"
            android:text="取消"
            android:textColor="@android:color/white"
            android:textSize="@dimen/f_18" />

        <View
            android:layout_width="@dimen/d_48"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btn_ok_certain_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dialog_ok_btn"
            android:text="确认"
            android:textColor="@android:color/white"
            android:textSize="@dimen/f_18" />
    </LinearLayout>
</LinearLayout>