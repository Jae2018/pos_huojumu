<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_56"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/d_80"
            android:layout_height="match_parent"
            android:padding="@dimen/d_8"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/des"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="设置"
            android:textColor="@android:color/white"
            android:textSize="@dimen/f_20" />

        <View
            android:layout_width="@dimen/d_80"
            android:layout_height="@dimen/d_48" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_clear_cache"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_48"
        android:layout_marginTop="@dimen/d_48"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/d_16"
        android:paddingRight="@dimen/d_16"
        android:text="清理缓存"
        android:textSize="@dimen/f_20" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_1"
        android:layout_marginStart="@dimen/d_16"
        android:layout_marginEnd="@dimen/d_16"
        android:background="@color/btn_den" />

    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_48"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/d_16"
        android:paddingRight="@dimen/d_16"
        android:text="登出"
        android:textSize="@dimen/f_20" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_1"
        android:layout_marginStart="@dimen/d_16"
        android:layout_marginEnd="@dimen/d_16"
        android:background="@color/btn_den" />

    <LinearLayout
        android:id="@+id/tv_update"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_48"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/d_48"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/d_16"
            android:paddingRight="@dimen/d_16"
            android:text="当前版本"
            android:textSize="@dimen/f_20" />

        <TextView
            android:id="@+id/tv_app_version"
            android:layout_width="0dp"
            android:layout_height="@dimen/d_48"
            android:layout_weight="1"
            android:gravity="end|center_vertical"
            android:paddingLeft="@dimen/d_16"
            android:paddingRight="@dimen/d_16"
            android:textSize="@dimen/f_20" />
    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_1"
        android:layout_marginStart="@dimen/d_16"
        android:layout_marginEnd="@dimen/d_16"
        android:background="@color/btn_den" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_pos"
            android:layout_width="0dp"
            android:layout_height="@dimen/d_48"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/d_16"
            android:paddingRight="@dimen/d_16"
            android:text="小票宽度设置"
            android:textSize="@dimen/f_20" />

        <Switch
            android:id="@+id/switch_pos"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d_48"
            android:layout_marginEnd="@dimen/d_16"
            android:textOff="80"
            android:textOn="58" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_1"
        android:layout_marginStart="@dimen/d_16"
        android:layout_marginEnd="@dimen/d_16"
        android:background="@color/btn_den" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_receipt_txt"
            android:layout_width="0dp"
            android:layout_height="@dimen/d_48"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/d_16"
            android:paddingRight="@dimen/d_16"
            android:text="小票语言设置"
            android:textSize="@dimen/f_20" />

        <Switch
            android:id="@+id/switch_receipt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d_48"
            android:layout_marginEnd="@dimen/d_16"
            android:textOff="CN"
            android:textOn="EN" />
    </LinearLayout>


</LinearLayout>