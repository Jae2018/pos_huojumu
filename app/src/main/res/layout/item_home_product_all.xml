<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/d_170"
    android:layout_height="@dimen/d_170"
    android:background="@drawable/pro_border"
    android:layout_marginBottom="@dimen/d_10"
    android:padding="@dimen/d_1">

    <ImageView
        android:id="@+id/iv_product_url"
        android:layout_width="@dimen/d_140"
        android:layout_height="@dimen/d_140"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/d_10"
        android:contentDescription="@string/des" />

    <TextView
        android:id="@+id/tv_product_cut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_product_url"
        android:gravity="center" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:layout_below="@id/iv_product_url"
        android:background="@color/btn_den" />

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_product_url"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_for_sell_out"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#bb222222"
        android:gravity="bottom|center_horizontal"
        android:text="已售罄"
        android:textColor="@android:color/white"
        android:textSize="@dimen/f_24"
        android:visibility="gone" />

    <TextView
        android:id="@+id/left_tv"
        android:layout_width="@dimen/d_40"
        android:layout_height="@dimen/d_40"
        android:layout_centerVertical="true"
        android:background="@drawable/move_tv_selector"
        android:textColor="@color/addon_text_selector"
        android:padding="@dimen/d_4"
        android:visibility="invisible"
        android:gravity="center"
        android:text="小杯" />

    <TextView
        android:id="@+id/right_tv"
        android:layout_width="@dimen/d_40"
        android:layout_height="@dimen/d_40"
        android:layout_alignParentEnd="true"
        android:background="@drawable/move_tv_selector"
        android:textColor="@color/addon_text_selector"
        android:padding="@dimen/d_4"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:text="大杯" />

    <TextView
        android:id="@+id/top_tv"
        android:layout_width="@dimen/d_40"
        android:layout_height="@dimen/d_40"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:background="@drawable/move_tv_selector"
        android:textColor="@color/addon_text_selector"
        android:padding="@dimen/d_4"
        android:gravity="bottom"
        android:text="加冰" />

    <TextView
        android:id="@+id/bottom_tv"
        android:layout_width="@dimen/d_40"
        android:layout_height="@dimen/d_40"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:background="@drawable/move_tv_selector"
        android:textColor="@color/addon_text_selector"
        android:padding="@dimen/d_4"
        android:layout_centerHorizontal="true"
        android:text="常温" />
</RelativeLayout>